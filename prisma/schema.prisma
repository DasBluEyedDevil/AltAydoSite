generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("postgresql://aydocorp_devil:IHateGeico1!@localhost:5432/aydocorp_db")
  shadowDatabaseUrl = env("postgresql://aydocorp_devil:IHateGeico1!@localhost:5432/aydocorp_db")
}

// User model
model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  name      String?
  role      String    @default("user")
  image     String?
  profile   Profile?
}

// User profile with additional fields
model Profile {
  id            String  @id @default(cuid())
  bio           String?
  organization  String?
  userType      String?
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

