generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  email          String    @unique
  aydoHandle     String    @unique
  discordName    String?
  rsiAccountName String?
  passwordHash   String
  clearanceLevel Int       @default(1)
  role           String    @default("member")
  image          String?
  profile        Profile?
}

// User profile with additional fields
model Profile {
  id            String  @id @default(cuid())
  bio           String?
  organization  String?
  userType      String?
  userId        String  @unique
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

